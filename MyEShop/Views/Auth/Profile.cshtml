@model ProfileViewModel

@{
    ViewBag.Title = "Profile";
    Layout = "_Layout";
}
    
<div class="mb-4">
    <h2>@ViewBag.Title</h2>
</div>

<div class="d-flex aligns-items-center justify-content-center h-100">
    <div class="w-50">
            <div class="mb-3">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQDtS3xGOSF3KrNqFbp9jmXMigMPGRsJah9IA&usqp=CAU" class="card-img-top" alt="...">
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">@Model.Name</label>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">@Model.Email</label>
            </div>
            <form asp-action="LogOut" asp-controller="Auth" method="post">
                <button type="submit" class="btn btn-primary btn-lg">Log Out</button>
            </form>
    </div>
</div>
