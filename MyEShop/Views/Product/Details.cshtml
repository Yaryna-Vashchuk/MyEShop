@model ProductViewModel

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
    Context.User.IsInRole("Admin");
}

<div class="mb-4">
    <h2>@ViewBag.Title</h2>
</div>

<div class="card col-md-12">
    <img src="@Model.ImagePath" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
        <h6 class="card-text">@Model.Price.ToString() $</h6>
        @if (Context.User.Identity.IsAuthenticated)
        {
            <button onclick="AddToCart(`@Model.Id.ToString()`)">Add to cart</button>
        }
        @if (Context.User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id.ToString()" asp-controller="Product" type="button" class="btn btn-primary btn-lg">Edit</a>
        }
    </div>
</div>
